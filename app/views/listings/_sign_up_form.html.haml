%form.signup.row
  .small-12.columns
    .row
      .small-12.columns
        %input{ type: "text", name: "name", placeholder: "Name" }
      .small-12.columns
        %input{ type: "email", name: "email", placeholder: "Email" }
      .small-12.columns
        %input{ type: "password", name: "password", placeholder: "Password" }
      .small-6.medium-6.columns.end
        %input{ type: "text", name: "zipcode", inputmode: "numeric", pattern: "[0-9]*", maxlength: "5", placeholder: "Zipcode" }
    .row
      .small-10.medium-6.small-centered.columns
        %a.button.radius.small.expand.success#signUp Sign up
  %input.hide{ type: "submit" }
